__lua__
function _init()
	shipx=64
	shipy=64
	shipvx=0
	shipvy=0
	shipspd=2
	shipspr=2
	bullx=64
	bully=-10
	bullspd=4
end

function _update()
	shipvx=0
	shipvy=0
	shipspr=2
	
	if btn(0) then
		shipvx=-shipspd
		shipspr=1
	end
	
	if btn(1) then
		shipvx=shipspd
		shipspr=3
	end
	
	if btn(2) then
		shipvy=-shipspd
	end
	
	if btn(3) then
		shipvy=shipspd
	end
	
	if btnp(5) then
		sfx(0)
		bullx=shipx
		bully=shipy-3
	end
	
	shipx+=shipvx
	shipy+=shipvy
	
	bully-=bullspd
	
	if shipx>127 then
		shipx=-7
	end
	
	if shipx<-7 then
		shipx=127
	end
	
	if shipy<-7 then
		shipy=127
	end
	
	if shipy>127 then
		shipy=-7
	end
end

function _draw()
	cls(0)
	spr(shipspr,shipx,shipy)
	spr(16,bullx,bully)
end
